{
  "window.zoomLevel": 0,
  "terminal.integrated.fontSize": 16,
  "editor.fontSize": 18,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length=100",
    "--indent-size=2"
  ],
  "python.pythonPath": "/usr/bin/python3"
}
